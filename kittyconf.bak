# MAPPINGS
map shift+alt+]	next_tab
map shift+alt+[	previous_tab
map alt+w	close_tab
map alt+q	close_os_window
map alt+t	launch --cwd=current --type=tab
map ctrl+shift+enter launch --cwd=current
map alt+d launch --location=hsplit --cwd=current
map alt+shift+d launch --location=vsplit --cwd=current
# map cmd+t new_tab_with_cwd

# FONT_SETTINGS
font_family	        JetBrainsMono Nerd Font
# bold_font 	        JetBrains Mono Bold Nerd Font Complete
# italic_font     		JetBrains Mono Italic Nerd Font Complete
# bold_italic_font  	JetBrains Mono Bold Italic Nerd Font Complete
# font_size		12

# SETTINGS
scrollback_lines 10000
copy_on_select clipboard
strip_trailing_spaces smart
enable_audio_bell no
window_alert_on_bell yes
editor nvim
enabled_layouts splits:split_axis=horizontal

